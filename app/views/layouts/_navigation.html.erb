<%= link_to 'Chatroom', root_path, class: "item" %>
<%= link_to 'Messages', root_path, class: "item" %>
<div class="right menu">
  <% if logged_in? %>
    <div class="ui dropdown item">
      User <i class="dropdown icon"></i>
      <div class="menu">
        <%= link_to 'Logout', logout_path, method: :delete, class: "item" %>
      </div>
    </div>
  <% end %>
  <% if !logged_in? %>
    <div class="item">
        <%= link_to 'Sign up', signup_path, class: "ui orange button" %>
        <%= link_to 'Log in', login_path, class: "ui button btn-nav" %>
    </div>
  <% end %>
</div>
