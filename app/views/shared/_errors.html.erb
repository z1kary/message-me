<% if obj.errors.any? %>
    <div class="ui error message" role="alert">
        <div class="header">The following errors prevented the <%= obj.class.name.downcase %> from being saved</div>
        <ul>
            <% obj.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
        <button type="button" class="close ui button" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% end %>
